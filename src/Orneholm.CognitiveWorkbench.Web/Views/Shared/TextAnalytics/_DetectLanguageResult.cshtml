@using Orneholm.CognitiveWorkbench.Web.Extensions
@model Microsoft.Azure.CognitiveServices.Language.TextAnalytics.Models.LanguageResult

<div class="mb-5">
    <h4>Detected Languages</h4>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>ISO6391</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detectedLanguage in Model.DetectedLanguages)
            {
                <tr>
                    <th>@detectedLanguage.Name</th>
                    <td>@detectedLanguage.Iso6391Name</td>
                    <td>@detectedLanguage.Score.ToDescriptivePercentage()</td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.DetectedLanguages.Any())
    {
        <p class="p-2">
            No detected languages.
        </p>
    }
</div>
